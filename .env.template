NEXT_PUBLIC_APP_TITLE=Weval
NEXT_PUBLIC_APP_TAGLINE=Massive Evaluation Platform
NEXT_PUBLIC_BLUEPRINT_CONFIG_REPO_SLUG=user/repo # your blueprints repo

STORAGE_PROVIDER=your_storage_provider
APP_S3_BUCKET_NAME=your_s3_bucket_name_for_results
APP_S3_REGION=your_s3_region
APP_AWS_ACCESS_KEY_ID=your_aws_access_key_id
APP_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

NEXT_PUBLIC_ADMIN_SECRET_SLUG=secret_admin_slug
GITHUB_TOKEN=github_token
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
SESSION_SECRET=your_session_secret_for_oauth
HOMEPAGE_DEV_CACHE_DURATION_MS=30000
ANALYSIS_DEV_CACHE_DURATION_MS=600000

# API Keys (openai needed for embeddings, others can be e.g. openrouter, x, google, etc.)
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
X_API_KEY=your_xai_api_key
ANYSCALE_API_KEY=your_anyscale_api_key
TOGETHERAI_API_KEY=your_together_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key

# Sentry Error Tracking (optional but recommended for production)
# IMPORTANT: These should be set in Netlify environment variables, NOT in your local .env
# This keeps local development faster and prevents noise from dev errors
# See docs/SENTRY.md for details
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here  # Same as SENTRY_DSN, for client-side
SENTRY_ORG=your_sentry_org_slug  # Optional: for source map uploads
SENTRY_PROJECT=your_sentry_project_slug  # Optional: for source map uploads
SENTRY_AUTH_TOKEN=your_sentry_auth_token  # Optional: for source map uploads in CI/CD
SENTRY_RELEASE=git-commit-sha-or-version  # Optional: set automatically in CI/CD

# Background Function Authentication
# Required for calling Netlify background functions (factcheck, evaluations, etc.)
# Generate with: openssl rand -hex 32
BACKGROUND_FUNCTION_AUTH_TOKEN=your_generated_token_here

# App URL (used for background function calls and redirects)
# Local: http://localhost:8888
# Production: https://your-app.netlify.app
NEXT_PUBLIC_APP_URL=http://localhost:8888

